<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BrandGreen">#FF4FA44F</Color>
    <Color x:Key="BrandGreenDark">#FF3D8B3D</Color>
    <Color x:Key="Surface">#FFFFFFFF</Color>
    <Color x:Key="BgTop">#FFE8F1E8</Color>
    <Color x:Key="BgBottom">#FF6AA06A</Color>
    <Color x:Key="TextPrimary">#FF222222</Color>
    <Color x:Key="TextSecondary">#99333333</Color>
    <Color x:Key="InputBorder">#FFDBE2DB</Color>
    <Color x:Key="InputBorderFocus">#FF7EBD7E</Color>

    <LinearGradientBrush x:Key="AppBg" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BgTop}" Offset="0"/>
        <GradientStop Color="{StaticResource BgBottom}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="BrandBrush" Color="{StaticResource BrandGreen}"/>
    <SolidColorBrush x:Key="BrandBrushDark" Color="{StaticResource BrandGreenDark}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorder}"/>
    <SolidColorBrush x:Key="InputBorderFocusBrush" Color="{StaticResource InputBorderFocus}"/>
</ResourceDictionary>
